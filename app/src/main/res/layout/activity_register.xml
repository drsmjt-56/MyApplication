<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textWelcomeRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halaman Register"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        android:id="@+id/textWelcomeJenisKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="240dp" />

    <RadioGroup
        android:id="@+id/buttonJenisKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcomeJenisKelamin">

        <RadioButton
            android:id="@+id/buttonJenisKelaminPria"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:text="Pria"
            app:layout_constraintStart_toStartOf="parent" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAFTAR"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcomeJenisKelamin" />


</androidx.constraintlayout.widget.ConstraintLayout>